<div id="bmiRow" style="text-align:center; display:none">
    <div style="text-align:center">
        <div class="row">
            <div id="bmiscantypeheadercol" class="col-xs-4" style="text-align:right">
                <h3>
                    Scan Type:
                </h3>
            </div>
            <div class="col-xs-6" style="text-align:left">
                <div class="col-xs-3">
                    <h3><input type="radio" name="scanType" id="CTCA" checked="checked" /> CTCA</h3>
                </div>
                <div class="col-xs-3">
                    <h3><input type="radio" name="scanType" id="CABG" /> CABG</h3>
                </div>
                <div class="col-xs-6">
                    <h3><input type="radio" name="scanType" id="TRO" /> Triple Rule-Out</h3>
                </div>
                <br />
            </div>
            <div class="col-xs-2" style="text-align:left"></div>
        </div>
        <div class="row">
            <div class="col-xs-8" style="align-items:flex-end; padding-right: 2em">
                <div class="row"><input id="height" type="number" placeholder="Height (m)" /></div><br />
                <div class="row"><input id="weight" type="number" placeholder="Weight (kg)" /></div><br />

                <div>
                    <button type="button" id="calcBtnBMI" class="btn btn-primary btn-lg" onclick="calculateBMI(height.value,weight.value)">Calculate</button>
                    <button type="button" id="clearBtnBMI" class="btn btn-danger btn-lg" onclick="clearResultBMI()">Clear</button>
                </div>
            </div>
            <div id="bmiresultcol" class="col-xs-4" style="border-left: 1px solid; text-align:left">
                <div>
                    <h2>BMI: <span id="result">0.0</span></h2>
                </div>

                <div>
                    <h2>Contrast: <span id="contrast">0.0</span></h2>
                </div>
            </div>
        </div>
    </div><hr />
    <div id="prevnextbuttons" class="row" style="text-align:right">
        <button class="btn-lg btn-danger" id="bmiPrevButton" onclick="bmiPrev()">Previous</button>
        <button class="btn-lg btn-success" id="bmiNextButton" onclick="bmiNext()">Next</button>
    </div>
</div>


